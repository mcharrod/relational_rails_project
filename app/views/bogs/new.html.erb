<%= link_to "View all frogs in existence", '/frogs' %><br>

<%= form_with url: '/bogs', method: :create, local: true do |form|  %>
  <%= form.label :name, "Bog name" %>
  <%= form.text_field :name  %>
  <%= form.label :ph, "Bog ph" %>
  <%= form.text_field :ph %>
    <div id="dropdown_list">
      <%= form.label :radioactive %>
      <%= form.select :radioactive, options_for_select([false, true]), class: 'form-control' %>
    </div>
  <%= form.submit %>
<% end %>
