<%= form_with url: '/bogs', method: :post, local: true do |form|  %>
  <p><%= form.label :name, "Bog name" %></p>
  <p><%= form.text_field :name  %></p>
  <p><%= form.label :ph, "Bog ph" %></p>
  <p><%= form.text_field :ph %></p>
  <p><%= form.label :radioactive %></p>
  <p><%= form.select :radioactive, options_for_select([false, true]), class: 'form-control' %></p>
  <%= form.submit %>
<% end %>
